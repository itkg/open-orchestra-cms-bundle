<!-- DYNAMISE THE CONTENT TYPE -->

<script type="text/javascript">
$(document).ready(function() {
    
    var deleteContentType = new ConfirmDialog(
        'deleteContentType',
        function(params){
            window.location.hash = "{{ path('php_orchestra_cms_bo_contentType_delete') }}/" + params.selectedContentType;
        },
        370
    );
    
    deleteContentType.create();
    
    $('.deleteContentType').click(function(e) {
        $("#dialog-deleteContentType").dialog({'okParams' : {'selectedContentType' : $(this).attr('data-contentType')}});
        $("#dialog-deleteContentType").dialog("open");
    });
});
</script>

