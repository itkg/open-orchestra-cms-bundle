{% if node is defined %}
    <ul class="{{ class.ul }}">
        <li><a href="{{ node.url }}" class="{{ class.link }}">{{ node.text }}</a></li>
        {% if node.sublinks is defined %}
            {% for child in node.sublinks %}
                {% if child %}
                    {% include "PHPOrchestraCMSBundle:Block/Menu:show.html.twig" with {"node": child} %}
                {% endif %}
            {% endfor %}
        {% endif %}
    </ul>
{% else %}
    <div id="{{ id }}" class="{{ class.div }}">
    {% for node in tree %}
         {% include "PHPOrchestraCMSBundle:Block/Menu:show.html.twig" with {"node": node, "class": class} %}
    {% endfor %}
    </div>
{% endif %}