<html>
    <head>
        <title>{% block title %}{{ node.name }}{% endblock %}</title>
        {% block stylesheets %}
            {{ phpOrchestraCss(node.theme) }}
        {% endblock %}
        {% stylesheets 
            '@PHPOrchestraCMSBundle/Resources/public/css/jquery-ui.css'
        %}
            <link rel="stylesheet" href="{{ asset_url }}"/>
        {% endstylesheets %}
        {#% stylesheets
            'bundles/fakeapptheme/themes/theme1/css/font.css'
            'bundles/fakeapptheme/themes/theme1/css/color.css'
            'bundles/fakeapptheme/themes/theme1/css/bg.css'
            filter='cssrewrite' %}
            <link rel="stylesheet" href="{{ asset_url }}" />
        {% endstylesheets %#}
        {% javascripts
            '@PHPOrchestraCMSBundle/Resources/public/js/libs/jquery-2.0.2.min.js'
            '@PHPOrchestraCMSBundle/Resources/public/js/libs/jquery-ui-1.10.3.min.js'
        %}
            <script src="{{ asset_url }}"></script>
        {% endjavascripts %}

    </head>
    <body>
        <div id="orchestra">
            <span>datetime : {{ datetime }}</span>
            <div id="orchestra-main">
        {% for area in node.areas %}
            {% include "PHPOrchestraCMSBundle:Node:area.html.twig" with {"area": area, "blocks": blocks} only %}
        {% endfor %}
            </div>
        </div>
        
        {% block javascripts %}
            {{ phpOrchestraJs(node.theme) }}
        {% endblock %}
        
        {#% javascripts
            '@FakeAppThemeBundle/Resources/public/themes/theme1/js/alert.js' %}
            <script src="{{ asset_url }}"></script>
        {% endjavascripts %#}
    </body>
</html>
