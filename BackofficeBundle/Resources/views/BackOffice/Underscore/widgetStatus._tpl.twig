<div class="widget-toolbar">
    <!-- add: non-hidden - to disable auto hide -->

    <div class="btn-group">
        <button class="btn dropdown-toggle btn-xs txt-color-white bg-color-<%= currentStatus.code_color %>" data-toggle="dropdown">
            <i class="glyphicon glyphicon-thumbs-up"></i> <%= currentStatus.label %> <i class="fa fa-caret-down"></i>
        </button>
        <ul class="dropdown-menu pull-right js-status-update">
            <% if (statuses.length > 0 && typeof statusChangeLink !== "undefined") { %>
                <% _.each(statuses, function(status) { %>
                    <% if (status.allowed) { %>
                        <li>
                            <a class="change-status"
                                data-url="<%= statusChangeLink %>"
                                data-status="<%= status.id %>"
                            >
                                <i class="fa fa-circle txt-color-<%= status.code_color %>"></i>
                            <%= status.label %></a></li>
                    <% } else { %>
                        <li class="status-disabled"><i class="fa fa-circle txt-color-disabled"></i> <%= status.label %></li>
                    <% } %>
                <% }); %>
            <% } else { %>
                <li class="status-disabled">{{ ('open_orchestra_backoffice.status.none_available')|trans({}, 'messages', language) }}</li>
            <% } %>
        </ul>
    </div>
</div>
