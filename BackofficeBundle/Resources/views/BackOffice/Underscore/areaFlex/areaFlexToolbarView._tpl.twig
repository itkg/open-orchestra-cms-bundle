<div
    class="area-toolbar"
    data-title-new-row = "{{ 'open_orchestra_backoffice.form.area_flex.new_row_title'|trans() }}"
    data-title-edit-row = "{{ 'open_orchestra_backoffice.form.area_flex.edit_row_title'|trans() }}"
    data-title-edit-column = "{{ 'open_orchestra_backoffice.form.area_flex.edit_column_title'|trans() }}"
>
    <div class="row">
        <div class="col col-lg-9">
            <ul class="area-breadcrumb breadcrumb"></ul>
        </div>
    </div>
    <div class="btn-toolbar">
        <% if ("root" !== area.get('area_type')) { %>
            <div class="btn-group column-action">
                <label class="label-btn-groups" >{{ 'open_orchestra_backoffice.areas_flex.edit_column_label'|trans() }}</label>
                <button type="button" class="btn btn-default move-column">
                    <span class="glyphicon glyphicon-resize-horizontal"></span>
                </button>
                <button type="button" class="btn btn-default edit-column">
                    <span class="glyphicon glyphicon-cog"></span>
                </button>
                <button type="button" class="btn btn-default delete-column"
                        data-delete-confirm-question="{{ 'open_orchestra_backoffice.areas_flex.delete_column_question'|trans }}"
                        data-delete-confirm-explanation="{{ 'open_orchestra_backoffice.areas_flex.delete_explanation'|trans }}"
                        data-delete-error-txt="{{ 'open_orchestra_backoffice.areas_flex.delete_error_txt'|trans }}"
                >
                    <span class="glyphicon glyphicon-trash"></span>
                </button>
            </div>
            <div class="btn-group row-action">
                <label class="label-btn-groups">{{ 'open_orchestra_backoffice.areas_flex.edit_row_label'|trans() }}</label>
                <button type="button" class="btn btn-default move-row">
                    <span class="glyphicon glyphicon-resize-vertical"></span>
                </button>
                <button type="button" class="btn btn-default edit-row">
                    <span class="glyphicon glyphicon-cog"></span>
                </button>
                <button type="button" class="btn btn-default delete-row"
                        data-delete-confirm-question="{{ 'open_orchestra_backoffice.areas_flex.delete_row_question'|trans }}"
                        data-delete-confirm-explanation="{{ 'open_orchestra_backoffice.areas_flex.delete_explanation'|trans }}"
                        data-delete-error-txt="{{ 'open_orchestra_backoffice.areas_flex.delete_error_txt'|trans }}"
                >
                    <span class="glyphicon glyphicon-trash"></span>
                </button>
            </div>
        <% } %>
        <% if ("undefined" !== typeof(area.get('links')._self_form_new_row)) { %>
            <div class="btn-group">
                <button type="button" class="btn btn-default add-row-action">
                    <span class="glyphicon glyphicon-plus"></span> {{ 'open_orchestra_backoffice.areas_flex.new_row_label'|trans() }}
                </button>
            </div>
        <% } %>
    </div>
</div>
