<li id="area"
    data-delete-confirm-question="{{ 'open_orchestra_backoffice.areas.delete_question'|trans }}"
    data-delete-confirm-explanation="{{ 'open_orchestra_backoffice.areas.delete_explanation'|trans }}"
    data-delete-error-txt="{{ 'open_orchestra_backoffice.areas.delete_error_txt'|trans }}">
    <div class="area-toolbar toolbar-container">
        <div class="toolbar">
            <span class="title tool"><%= area.get('ui_model').label %></span>
        <% if (editable) { %>
            <span class="tool area-param">
                <i class="glyphicon glyphicon-pencil"></i>
            </span>
            <span class="tool area-remove">
                <i class="glyphicon glyphicon-trash"></i>
            </span>
        <% } else { %>
            <span class="tool area-param">
                <i class="glyphicon glyphicon-eye-open"></i>
            </span>
        <% } %>
        </div>
    </div>
    <div class="area-content">
        <ul class="ui-model-areas"></ul>
        <ul class="ui-model-blocks" data-areaId="<%= area.get('ui_model').id %>"></ul>
    </div>
</li>
