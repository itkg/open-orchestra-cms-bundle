<li id="area-<%= cid %>">
    <div class="toolbar-layer area-toolbar">
        <div class="toolbar">
            <span class="tool"><%= area.get('ui_model').label %></span>
        <% if (node_published) { %>
            <span class="tool area-param-<%= area.cid %>">
                <i class="glyphicon glyphicon-eye-open"></i>
            </span>
        <% } else { %>
            <span class="tool area-param-<%= area.cid %>">
                <i class="glyphicon glyphicon-pencil"></i>
            </span>
            <span class="tool area-remove-<%= area.cid %>">
                <i class="glyphicon glyphicon-trash"></i>
            </span>
        <% } %>
        </div>
    </div>
    <div>
        <ul class="ui-model-areas areas-<%= cid %>"></ul>
        <ul class="ui-model-blocks blocks-<%= cid %> resizable-<%= cid %>"></ul>
        <span class="delete-confirm-question-<%= cid %> hidden-info">{{ 'open_orchestra_backoffice.areas.delete_question'|trans }}</span>
        <span class="delete-confirm-explanation-<%= cid %> hidden-info">{{ 'open_orchestra_backoffice.areas.delete_explanation'|trans }}</span>
        <span class="delete-error-title-<%= cid %> hidden-info">{{ 'open_orchestra_backoffice.areas.delete_error_title'|trans }}</span>
        <span class="delete-error-txt-<%= cid %> hidden-info">{{ 'open_orchestra_backoffice.areas.delete_error_txt'|trans }}</span>
        <span class="delete-confirm-question-block-<%= cid %> hidden-info">{{ 'open_orchestra_backoffice.block.delete_question'|trans }}</span>
        <span class="delete-confirm-explanation-block-<%= cid %> hidden-info">{{ 'open_orchestra_backoffice.block.delete_explanation'|trans }}</span>
    </div>
</li>
