            </ul>
            <div class="tab-content">
                {% for key, field in form %}
                    <div class="tab-pane {% if loop.first %}active{% endif %}" id="tab-{{ form.vars.id }}-{{ key }}">
                        <div class="form-group{% if field.vars.errors|length > 0 %} has-error{% endif %}">
                            {{ form_widget(field) }}
                            {{ form_rest(field) }}
                            {{ form_errors(field) }}
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    {% endspaceless %}
{% endblock %}
